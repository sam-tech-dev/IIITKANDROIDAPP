<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <!--First Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:orientation="horizontal"
        android:weightSum="1">

        <!--1-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_one"></include>
        <!--2-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_two"></include>
        <!--3-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_three"></include>

    </LinearLayout>

    <!--Second Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.34">

        <!--4-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_four"></include>
        <!--5-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_five"></include>
        <!--6-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_six"></include>

    </LinearLayout>

    <!--Third Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33">

        <!--7-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_seven"></include>
        <!--8-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_eight"></include>
        <!--9-->
        <include layout="@layout/home_row_item"
            android:id="@+id/home_row_item_nine"></include>

    </LinearLayout>

</LinearLayout>