<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssverma.iiitkota.Faculty$PlaceholderFragment">

    <ProgressBar
        android:id="@+id/latest_events_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/latest_events_progress_bar"></android.support.v7.widget.RecyclerView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing To Show :("
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/nothingToShow"/>

</RelativeLayout>
