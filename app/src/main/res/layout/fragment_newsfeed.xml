<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssverma.iiitkota.Faculty$PlaceholderFragment">

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/news_progress_bar"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/news_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_progress_bar">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/newsfeed_recycler_view"></android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing To Show :("
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/nothingToShow"/>


</RelativeLayout>
