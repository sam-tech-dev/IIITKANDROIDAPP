<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/program_ug_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:indeterminate="true" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/program_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/program_ug_progress_bar"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="No Post Graduate program running :("
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_dark"
        android:gravity="center"
        android:id="@+id/nothingToShow"
        android:paddingTop="10dp"/>

</RelativeLayout>