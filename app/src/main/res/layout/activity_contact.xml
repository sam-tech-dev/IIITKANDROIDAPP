<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.ssverma.iiitkota.Contact">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/faculty_cs_"
        android:layout_weight="1.0"
        android:text="@string/contact"
        android:paddingTop="@dimen/contact_paddingtop"
        android:paddingLeft="@dimen/contact_paddingleft"
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/dept"
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:text="Departments"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/deans"
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:text="Deans"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="20dp"
        android:layout_above="@+id/text_id1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp" />

    <Button
        android:id="@+id/others"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="-62dp"
        android:text="Others"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />


</LinearLayout>
