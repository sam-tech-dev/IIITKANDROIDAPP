<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="2dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/resources_row_item_holder">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lab No."
                android:id="@+id/lab_no_title"
                android:textSize="18dp"
                android:textColor="@color/colorTextPrimary"
                android:layout_alignParentLeft="true"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lab_no"
                android:textSize="16dp"
                android:padding="5dp"
                android:layout_toRightOf="@+id/lab_no_title"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_pc_title"
                android:text="Total PC: "
                android:textSize="18dp"
                android:textColor="@color/colorTextPrimary"
                android:layout_toLeftOf="@+id/total_pc"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_pc"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:padding="5dp"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deployment"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="@color/colorTextPrimary"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>