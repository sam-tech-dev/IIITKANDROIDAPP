<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/gallery_album_card">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gallery_albums_holder">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/gallery_album_thumbnail"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/gallery_album_name_holder"
            android:orientation="vertical"
            android:background="#80444444"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Album Name"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/gallery_album_name"
                android:singleLine="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No of Images"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:padding="1dp"
                android:id="@+id/gallery_album_no_of_images"/>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>