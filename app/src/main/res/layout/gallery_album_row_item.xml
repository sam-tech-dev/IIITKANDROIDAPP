<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/gallery_albums_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/gallery_album_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gallery_album_thumbnail">

            <TextView
                android:id="@+id/gallery_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="title here"
                android:padding="2dp"
                android:textColor="@color/colorTextPrimary"
                android:textSize="19dp"
                android:singleLine="true"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/gallery_album_no_of_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="20dp"
                android:padding="2dp"
                android:text="No of Images"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15dp"
                android:layout_below="@+id/gallery_album_name"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>